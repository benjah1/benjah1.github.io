           /.navbar-collapse 
      //
         /.container-fluid 
    //
       Header 
    header
      .container
        .row
          .col-md-12
            img.img-responsive.img-circle(src='images/profile.jpg', alt='Headshot of Zhibin Huang')
            .intro-text
              h1.name Zhibin Huang
              hr.star-light
              span.skills Web Developer - Full Stack - Toronto, ON #{index}
              span.email.print-only benjaminhuang1@gmail.com
            .resume
              a.btn.btn-info.btn-lg(onclick='window.print();') Print Resume
              | &nbsp;or&nbsp;
              a.btn.btn-info.btn-lg(target='_blank', href='/Resume.pdf') Resume.pdf 
    //
       Skill Grid Section 
    section#skill
      .container
        .row
          .col-md-12.text-center
            h2 Technical Skills
            hr.star-primary
        .row.print-push
          each val, index in skills
            .col-md-8.col-md-offset-1
              b #{index}
              span #{val}
    
    //
      Work Grid Section 
    section#work
      .container
        .row
          .col-md-12.text-center
            h2 Work Experience
            hr.star-primary
        .row.print-push
          .col-md-8.col-md-offset-1
            h3 Radii Production, 2010 - 2014
            ul
              li Web application architecting, development and maintenance
              li Server management and shell scripting
              li Technical research
              li Documentation
    //
      Portfolio Grid Section 
      
      
    section#portfolio
      .container
        .row
          .col-md-12.text-center
            h2 Portfolio
            hr.star-primary
        .row
          each port, i in portfolios
            .col-sm-6.col-md-4.portfolio-item
              a.portfolio-link(href='#portfolioModal#{i}', data-toggle='modal')
                if port.logo
                  img.img-responsive(src='#{port.logo.img.src}', alt='#{port.logo.img.alt}')
                else
                  .portfolio-custom
                    div
                      div #{port.name}
                    img.img-responsive(src='images/portfolio/custom.jpg', alt='placeholder image')

    //
      Portfolio Modals
    section#project
      .container
        .row
          .col-md-12.text-center
            h2 Projects of Interests
            hr.star-primary
    each port, i in portfolios
      div.portfolio-modal.modal.fade(id='portfolioModal#{i}',tabindex='-1', role='dialog', aria-hidden='true')
        .modal-content
          .container
            .row
              .col-md-8.col-md-offset-1
                  button.btn.btn-default.pull-right(type='button', data-dismiss='modal')
                    i.fa.fa-times
                  h2 #{port.name}
                  hr.break
                  if port.img
                    img.img-responsive(src='#{port.img.src}', alt='#{port.img.alt}')
                  each prj, j in port.projects
                    if prj.img
                      img.img-responsive(src='#{prj.img.src}', alt='#{prj.img.alt}')
                    h3 #{prj.name}
                    p !{prj.desc}
                  footer
                    button.btn.btn-default.btn-lg(type='button', data-dismiss='modal')
                      i.fa.fa-times
                      | Close

    //
       References Grid Section 
    section#ref
      .container
        .row
          .col-md-12.text-center
            h2 References
            hr.star-light
        .row.print-push
          .col-md-12.text-center
            p Available Upon Request
    //
       Contact Section 
    section#contact
      .container
        .row
          .col-md-12.text-center
            h2 Contact
            hr.star-primary
        .row
          .col-md-12.text-center
            a.btn.btn-primary.btn-lg(href='mailto:benjaminhuang1@gmail.com') Email Zhibin
    //
       Footer 
    footer.text-center
      .footer-above
        .container
          .row
            .footer-col.col-md-4.col-md-offset-4
              h3 Around the Web
              ul.list-inline
                li
                  a.btn-social.btn-outline(href='https://github.com/benjah1', target='_blank')
                    i.fa.fa-fw.fa-github
                li
                  a.btn-social.btn-outline(href='https://www.linkedin.com/pub/zhibin-huang/2a/28/726', target='_blank')
                    i.fa.fa-fw.fa-linkedin
                li
                  a.btn-social.btn-outline(href='https://twitter.com/@benjaH_1', target='_blank')
                    i.fa.fa-fw.fa-twitter
      .footer-below
        .container
          .row
            .col-md-10.col-md-offset-1
              small
                a(rel='license', href='http://creativecommons.org/licenses/by-nc/3.0/deed.en_US')
                  img.cc(alt='Creative Commons License', src='http://i.creativecommons.org/l/by-nc/3.0/80x15.png')
                span(xmlns:dct='http://purl.org/dc/terms/', property='dct:title')
